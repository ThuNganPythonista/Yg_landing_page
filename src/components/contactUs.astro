        <input
          type="tel"
          id="phone"
          name="phone"
          placeholder="Nhập số điện thoại"
          pattern="[0-9]{10,11}"
          required
        />
      </div>
      <br />
      <div>
        <label for="email">Email:</label><br />
        <input
          type="email"
          id="email"
          name="email"
          placeholder="Nhập địa chỉ email"
          required
        />
      </div>
      <br />
      <div>
        <label for="message">Lời nhắn:</label><br />
        <textarea
          id="message"
          name="message"
          rows="5"
          placeholder="Nhập lời nhắn của bạn"
          required></textarea>
      </div>
      <br />
      <button type="submit">Gửi</button>
